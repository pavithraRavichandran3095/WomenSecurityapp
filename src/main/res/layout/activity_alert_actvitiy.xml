<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alert_actvitiy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rajezx.wosecalert.Activities.AlertActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="SMS Alert"
            android:onClick="sendsms"
            android:textAlignment="center"
            android:textSize="30sp"
            android:background="#0077b5"
            android:textColor="#FFFFFF"
            android:id="@+id/alertlocationbysms"
            />
        <LinearLayout
            android:layout_below="@+id/alertlocationbysms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/recordaudiobutton"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text="recordaudio"
                android:background="#00ffffff"
                android:textColor="#0077b5"
                android:textSize="30sp"
                android:layout_weight="1"/>

            <Button
                android:layout_marginTop="180dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:onClick="stopalert"
                android:text="Stop Alert"
                android:background="#0077b5"
                android:textSize="30sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
